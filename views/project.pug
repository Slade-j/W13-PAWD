extends navbar.pug
append head
  script(src="/javascripts/projectsAPI.js" type="module")
block nav
  .projectList__div
    form(action="/projects" method="post")
      input(type="hidden" name="_csrf" value=csrfToken)
      label(for="projectName")
      input(type="text" id="createNewProject" name="projectName" placeHolder="Create New Project"  class="formField_createProject")
      button(type="submit" class="user-submit-button") Create New Project

    include utils.pug
    div(class="projectsTilesContainer")
      each project in projects
        +projectTile(project.name, project.progress, project.id)
  block projects
