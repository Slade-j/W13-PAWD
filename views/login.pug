extends layout.pug
include utils.pug
block content
  .login__div
    h2 Log in
    +errorsDiv(errors)
    form(action="/users/login" method="post" class="login__form")
      input(type="hidden" name="_csrf" value=csrfToken)
      +field("email", "", "Email", "email", "email")
      +field("password", "", "Password", "Password", "password")
      button(type="submit" class="login-form__button") Log in
      .signup-link
        a(href="/users" class="login__a") Sign up
