extends navbar.pug
include utils.pug
block nav
    form(action="/" method="post")
    input(type="hidden" name="_csrf" value=csrfToken)
    label(for="projectName")
    input(type="text" id="createNewProject" name="projectName" placeHolder="Create New Project" value=project.name class="formField_createProject")
    button(type="submit" class="user-submit-button") Create New Project

  div(class="tasksContainer")
    each task in tasks
      +taskTile(task.name, task.inProgress, task.completed, task.priority, task.id)
